<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" spacing="10" stylesheets="@../styles/dashboard.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pulseband.pulseband.controllers.DashboardController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <HBox spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
        <Label fx:id="welcomeLabel" text="Welcome" />
        <Label fx:id="mqttConnectionStatusLabel" text="Status of MQTT connection..." />
    </HBox>

    <TextArea fx:id="mqttMessagesReceivedTextArea" editable="false" text="Messages received will appear here..." wrapText="true" />
</VBox>
